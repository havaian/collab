# =============================================================================
# GPT Collaboration App - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
APP_NAME="GPT Collaboration App"
APP_VERSION=1.0.0

# =============================================================================
# Server Configuration
# =============================================================================
# Backend server port
BACKEND_PORT=5000
# Frontend development server port  
FRONTEND_PORT=3000
# Client URL (for CORS and OAuth redirects)
CLIENT_URL=http://localhost:3000

# =============================================================================
# Database Configuration
# =============================================================================
# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/gpt-collab-dev
MONGO_PORT=27017
MONGO_INTERNAL_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your-secure-mongo-password-here
MONGO_DATABASE=gpt-collab-dev

# =============================================================================
# Redis Configuration (for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_INTERNAL_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# Authentication & Security
# =============================================================================
# JWT secret key (generate a strong random string)
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters-long
# JWT expiration time
JWT_EXPIRES_IN=7d
# Session secret
SESSION_SECRET=your-secure-session-secret-here

# Encryption key for API keys (32 characters hex)
ENCRYPTION_KEY=your-32-character-hex-encryption-key-here

# =============================================================================
# OAuth Configuration
# =============================================================================
# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# AI Service Configuration
# =============================================================================
# OpenAI API (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# =============================================================================
# Code Execution Service (Judge0)
# =============================================================================
# Judge0 API (https://rapidapi.com/judge0-official/api/judge0-ce)
JUDGE0_API_KEY=your-judge0-rapidapi-key-here
JUDGE0_API_HOST=judge0-ce.p.rapidapi.com
JUDGE0_SUBMISSIONS_URL=https://judge0-ce.p.rapidapi.com/submissions

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./server/uploads
ALLOWED_FILE_TYPES=.js,.ts,.py,.html,.css,.json,.md,.txt,.vue,.jsx,.tsx

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15
# Code execution rate limits
CODE_EXEC_LIMIT_PER_USER=10
CODE_EXEC_LIMIT_WINDOW=15

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@yourapp.com

# =============================================================================
# Admin Panel Access (Optional)
# =============================================================================
# MongoDB Express
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_PORT=8082

# =============================================================================
# Production-specific Settings
# =============================================================================
# Only set these in production environment

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Domain and proxy settings
DOMAIN=yourdomain.com
HTTP_PORT=80
HTTPS_PORT=443

# Monitoring
GRAFANA_PORT=3001
GRAFANA_PASSWORD=your-grafana-password
KIBANA_PORT=5601

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance
MAX_CONNECTIONS=1000
CLUSTER_MODE=false
WORKER_PROCESSES=auto

# =============================================================================
# Development Tools
# =============================================================================
# Enable development features
DEBUG=app:*
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_CODE_EXECUTION=true
ENABLE_AI_CHAT=true
ENABLE_FILE_SHARING=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# =============================================================================
# CDN and Asset Configuration
# =============================================================================
CDN_URL=
STATIC_ASSETS_URL=
MONACO_EDITOR_CDN=https://cdn.jsdelivr.net/npm/monaco-editor@0.45.0/min/vs